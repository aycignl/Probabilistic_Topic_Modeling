\mode<presentation>

\newif\ifbeamer@secheader
\beamer@secheaderfalse

\DeclareOptionBeamer{secheader}{\beamer@secheadertrue}
\ProcessOptionsBeamer

\useoutertheme{cmpe}

%
% Color definitions
%
\definecolor{uibred}{RGB}{170, 0, 0}
\definecolor{uibblue}{RGB}{0, 84, 115}
\definecolor{uibgreen}{RGB}{119, 175, 0}
\definecolor{uiborange}{RGB}{217, 89, 0}

\definecolor{newitem}{RGB}{253,206,2}
\setbeamercolor{boxl}{fg=black,bg=uibblue!20!white}
\setbeamercolor{boxu}{fg=white,bg=uibblue}

%
% Redefinition of beamer colors
%
\setbeamercolor{enumerate item}{fg=uibred,bg=uibred!20!white}
\setbeamercolor{enumerate subitem}{fg=uibred,bg=uibred!20!white}
\setbeamercolor{enumerate}{fg=uiborange,bg=uiborange}
\setbeamercolor{itemize item}{fg=uiborange}
\setbeamercolor{itemize subitem}{fg=uibgreen}
\setbeamercolor{frametitle}{fg=uibblue}
\setbeamercolor{title}{fg=black}
\setbeamercolor{section}{fg=uibblue}
\setbeamercolor{subsection}{fg=uibblue}
\setbeamercolor{itemize}{fg=uibblue}
\setbeamercolor{alerted text}{fg=uibred}



% Tills' opinion: should be done in an inner theme, not here.

\setbeamertemplate{frametitle}{\vspace{0.4cm} \color{white}  \insertframetitle}

\usesubitemizeitemtemplate{%
    \tiny\raise1.5pt\hbox{\color{beamerstructure}$\blacktriangleright$}%
}
\usesubsubitemizeitemtemplate{%
    \tiny\raise1.5pt\hbox{\color{beamerstructure}$\bigstar$}%
}

\setbeamersize{text margin left=.8cm,text margin right=.8cm} 

\ifbeamer@secheader\else\setbeamertemplate{headline}[default]\fi

\mode
<all>
